<body>
  <section class="intro">
    <div class="bg-image h-100">
      <div class="mask d-flex align-items-center h-100">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-12">
              <div class="card shadow-2-strong">
                <div class="card-body p-0">
                  <div class="table-responsive table-scroll" data-mdb-perfect-scrollbar="true"
                    style="position: relative; height: 700px">
                    <caption><h1 class="text-warning bg-dark mb-0" style="text-align: center;">사고기록 조회</h1></caption>
                    <table class="table table-dark table-hover mb-0">
                      <thead>
                        <tr>
                          <th class="text-success" scope="col">번호</th>
                          <th class="text-success" scope="col">사고 시각</th>
                          <th class="text-success" scope="col">선박명</th>
                          <th class="text-success" scope="col">위치</th>
                          <th class="text-success" scope="col">위험 단계</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% for (let i=0; i < data.length; i++) { %>
                          <tr>
                            <td>
                              <%= i+1 %>
                            </td>
                            <td>
                              <%= formatDateTime(data[i].datatime) %>
                            </td>
                            <td>
                              <%= data[i].ship_name %>
                            </td>
                            <td>
                              <%= data[i].location %>
                            </td>
                            <td>
                              <%= data[i].stage %>
                            </td>
                          </tr>
                          <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

</body>